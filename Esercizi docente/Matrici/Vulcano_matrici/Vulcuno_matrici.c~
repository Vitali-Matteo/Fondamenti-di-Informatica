#include<stdio.h>

#define NR 10
#define NC 10

int main(){

  int mappa[NR][NC];

  int i, k;

  int PX, PY;

  for(i = 0; i < L; i++){

    for(k = 0; k < L; k++){

      do{

	printf("Inserisci la quota della cella (%d, %d) della mappa: ", i + 1, k + 1);
	scanf("%d", &mappa[i][k]);

      }while(mappa[i][k] < 0);

    }

  }

  if(((PX > 0) && (PX < NR - 1)) && ((PY > 0) && (PY < NC - 1))){

    for(i = PX - 1; i <= PX + 1; i++){

      for(k = PY - 1; k <= PY + 1; k++){

	if((i != PX) && (k != PY)){

	  if(mappa[i][k] < mappa[PX][PY]){

	    mappa[i][k] = mappa[i][k] + 1;

	  }

	}

      }

    }

    mappa[PX][PY] = mappa[PX][PY] + 2;

  }
  else{

    printf("La posizione (%d, %d) non Ã¨ accettabile. \n", PX, PY);

  }

  printf("Stampo la matrice delle quote... \n");

  for(i = 0; i < NR; i++){

    for(k = 0; k < NC; k++){

      printf(" %d ", mappa[i][k]);

    }

    printf("\n");

  }

  return 0;

}
	    

	    

  
