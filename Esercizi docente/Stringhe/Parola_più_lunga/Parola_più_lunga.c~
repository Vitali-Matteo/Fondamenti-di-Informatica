#include<stdio.h>
#include<string.h>

#define L 300

int main(){

  char s[L + 1];

  int Max, S, i, k;

  printf("Inserisci la frase che devo analizzare: ");
  scanf("%[^\n]", s);

  Max = 0;

  for(i = 0; s[i] != '\0'; i = i + S){

    S = 0;

    for(k = 0; s[i + k] != ' '; k++){

      S = S + 1;

    }

    if(S > Max){

      Max = S;

    }

    S = S + 1;

  }

  printf("La parola pi√π lunga nella stringa ha %d caratteri. \n", Max);

  return 0;

}
