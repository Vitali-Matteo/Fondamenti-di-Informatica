#include<stdio.h>

#define N 100

int Check(int v[], int w[], int len);

int Load(int v[], int len);

int main(){

  int v[N], w[N];

  int La;

  int Uguali;

  do{

    printf("Inserisci la lunghezza dell'array: ");
    scanf("%d", &La);

  }while((La < 0) || (La > N));

  printf("Inserisci il rpimo array: \n");

  Load(v, La);

  printf("Inserisci il secondo array: \n");

  Load(w, La);

  Uguali = Check(v, w, La);

  printf("Il risultato del check Ã¨: %d. \n", Uguali);

  return 0;

}

void Load(int v[], in len){

  int i;

  for(i = 0; i < len; i++){

    scanf("%d", &v[i]);

  }

}

int Check(int v[], int w[], int len){

  int i, k, h;

  int Uguali;

  int Temp;

  Uguali = 0;

  for(i = 0; i < len && !Uguali; i++){

    Uguali = 1;

    for(h = 0; h < len; h++){

      if(v[h] != w[h]){

	Uguali = 0;

      }

    }

    Temp = w[0];

    for(k = 1; k < len; k++){

      w[k - 1] = w[k];

    }

    w[k] = Temp;

  }

  return Uguali;

}

    
