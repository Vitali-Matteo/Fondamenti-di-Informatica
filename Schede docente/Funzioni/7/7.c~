#include<stdio.h>
#include<math.h>

#define N 100

int SubSquare(float v[], int La);

int main(){

  float v[N];

  int La;

  int i;

  int Nsost;

  do{

    printf("Inserisci la lunghezza dell'array: ");
    scanf("%d", &La);

  }while((La < 0) || (La > N));

  printf("Inserisci l'array di lunghezza %d: ");

  for(i = 0; i < La; i++){

    scanf("%f", &v[i]);

  }

  Nsost = SubSquare(v, La);

  printf("Il numero di sostituzioni fatte Ã¨: %d. \n", Nsost);

  return 0;

}

int SubSquare(float v[], int La){

  int i;

  int Nsost;

  Nsost = 0;

  for(i = 0; i < La; i++){

    if(v[i] - ((int) sqrt(v[i])) * ((int) sqrt(v[i])) == 0){

      v[i] = sqrt(v[i]);

      Nsost++;

    }
    
  }

  return Nsost;

}
