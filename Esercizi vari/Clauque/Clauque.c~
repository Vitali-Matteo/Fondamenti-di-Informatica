#include<stdio.h>

#define N 10
#define M 20

int main(){

  int Mat[M][N];

  int i, k;

  int S;

  printf("Inserisci la matrice riga per riga %d X %d: \n", M, N);

  for(i = 0; i < M; i++){

    for(k = 0; k < N; k++){

      scanf("%d", &Mat[i][k]);

    }

  }

  S = 0;

  for(i = 0; i < M - 1; i++){

    for(k = 0; k < N - 1; k++){

      if(Mat[i][k] + Mat[i + 1][k + 1] == Mat[i + 1][k] + Mat[i][k+ 1]){

	S++;

      }

    }

  }

  printf("Il numero di clauque della matrice Ã¨: %d.\n", S);

  return 0;

}
