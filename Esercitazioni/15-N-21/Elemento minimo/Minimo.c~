int Minimo_2(int v[], int i, int La, int min){

  if(i >= n){

    return min;

  }
  else{

    if(v[i] < min){

      min = v[i];

    }
    else{

      return Minimo_2(v, i + 1, La, min); //Il min non è più lo stesso...

    }

  }

}

    

