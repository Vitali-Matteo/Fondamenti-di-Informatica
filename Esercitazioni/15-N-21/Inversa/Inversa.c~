#include<stdio.h>
#include<string.h>

#define N 100

void Inversa(char S[], int La, int i);

int main(){

  char S[N + 1];

  printf("Inserisci la stringa che devon invertire: ");
  scanf(" %[^\n]", S);

  Inversa(S, strlen(S), 0);

  printf("La parola invertita Ã¨: %s. \n", S);

  return 0;

}

void Inversa(char S[], int La, int i){

  char Temp;

  if(i <= La / 2){

    Temp = S[i];

    S[i] = S[La - i - 1];

    S[La - i - 1] = S[i];

    Inversa(S, La, i + 1);

  }

}
    
